#pipeline must be on top

pipeline{
  #any agent: Where to execute
  stages{
    stage("Build"){
      steps{
        echo "Building the application"
      }
    }
    
    stage("Test"){
      steps{
        echo "Testing the application"
      }
    }
    
    stage("Deploy"){
      steps{
        echo "Deploying the application"
      }
    }
  }
}
